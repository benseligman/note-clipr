  gem 'capybara'
  gem 'database_cleaner'
  gem 'ejs'
  gem 'rspec-rails'
  gem 'selenium-webdriver'
  gem 'launchy'
end

group :development do
  gem 'annotate'
  gem 'better_errors'
  gem 'binding_of_caller'
  gem 'byebug'
  gem 'pry-rails'
  gem 'quiet_assets'
end
