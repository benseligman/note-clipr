gem 'aws-sdk'
gem 'backbone-on-rails'
gem 'bcrypt-ruby'
gem 'figaro'
gem 'jquery-rails'
gem 'kaminari' # support pagination in rich file manager
gem 'omniauth'
gem 'omniauth-google-oauth2'
gem 'paperclip'
gem 'pg'
gem 'rabl'
gem 'redis-rails'
