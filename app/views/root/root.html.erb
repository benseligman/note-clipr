<div class="container">
  <div class="row" id="search"></div>
  <div class="row">
    <div class="span3 column" id="notebooks-tags"></div>
    <div class="span3 column" id="notes"></div>
    <div class="span6 column" id="note-detail"></div>
  </div>
</div>
<script type="text/json" id="bootstrapped-notebooks">
  <%= render(:file => 'notebooks/index', :formats => [:json], :locals => { :notebooks => self.current_user.notebooks.includes(:notes => [:tags]) }) %>
</script>

<script type="text/json" id="bootstrapped-user">
  <%= self.current_user.to_json %>
</script>

<script type="text/javascript">
  $(function () {
    var notebookDiv = $("<div>");
    notebookDiv.html($("#bootstrapped-notebooks").text());
    var notebooksData = JSON.parse(notebookDiv.text());

   var userDiv = $("<div>");
   userDiv.html($("#bootstrapped-user").text());
   var currentUser = JSON.parse(userDiv.text());

    NoteClipr.initialize(currentUser, notebooksData);
  });
</script>